<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.">



    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#CE000000"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="190dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="157dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_bk2">
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="My Button"
                        android:alpha="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:padding="20dp"
                        android:text="Protein"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/expand_activities_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:padding="15dp"
                        android:text="Expend All"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="17dp"

                        android:src="@drawable/protein" />


                </RelativeLayout>




        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Button"
                android:alpha="0" />


            <RelativeLayout
                android:background="@drawable/food_back"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/kreatin"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent">

                </ImageView>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:text="Kreatin"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:text="Expend All"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>





            </RelativeLayout>






        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Button"
                android:alpha="0" />

            <RelativeLayout
                android:background="@drawable/round_bk3"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/bca"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">


                </ImageView>

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="BCAA"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Expend All"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>





            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/round_bk3"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/bca"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">


                </ImageView>

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="BCAA"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="Expend All"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>





            </RelativeLayout>





        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>